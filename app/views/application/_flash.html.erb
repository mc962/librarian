<% flash.each do |name, message| %>
    <div class="row">
        <div class='col-4'></div>
        <div class='flash-box col-4 '>
            <div class="<%= "flash-content row alert alert-#{name}" %>" role='alert'>
                <div class='col-11'>
                    <ul>
                        <% message.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                    </ul>
                </div>
                <div class='col-1 my-auto'>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
        <div class='col-4'></div>
    </div>
<% end %>