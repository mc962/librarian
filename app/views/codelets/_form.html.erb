<%= form_for codelet, html: {class: 'codelet-form needs-validation', novalidate: true} do |f| %>
    <div class='form-row'>
        <div class='col'></div>
        <div class='col-md-12 col-lg-6 col-sm-12'>
            <div class='form-group'>
                <%= f.label :name, class: 'form-codelet-label' %>
                <%= f.text_field :name, class: 'form-control mb-md-5 mb-lg-4', required: true %>
                <div class='invalid-feedback'>
                    Please provide a name for the code
                </div>
            </div>
        </div>
        <div class='col'></div>
    </div>
    
    <div class='form-row'>
        <div class='col'></div>
        <div class='col-md-12 col-lg-6 col-sm-12'>
            <div class='form-group'>
                <%= f.label :description, 'Describe the Code', class: 'form-codelet-label' %>
                <%= f.text_area :description, class: 'form-codelet-text form-control mb-md-5 mb-lg-4', required: true %>
                <div class='invalid-feedback'>
                    Please describe the code
                </div>
            </div>
        </div>
        <div class='col'></div>
    </div>

    <div class='form-row'>
        <div class='col'></div>
        <div class='col-md-12 col-lg-6 col-sm-12'>
            <div class='form-group'>
                <%= f.label :examples, 'Examples', class: 'form-codelet-label' %>
                <%= f.text_area :examples, class: 'form-codelet-text form-control mb-md-5 mb-lg-4', required: false %>
            </div>
        </div>
        <div class='col'></div>
    </div>

    <div class='form-row'>
        <div class='col'></div>
        <div class='col-md-12 col-lg-6 col-sm-12 mb-md-5 mb-4 mb-lg-2'>
            <div class='form-group'>
                <%= f.label :publicly_accessible, 'Allow anyone to see this Code?', class: 'form-codelet-label' %>
                <%= f.check_box :publicly_accessible, class: 'form-check mb-md-5 mb-lg-2' %>
            </div>
        </div>
        <div class='col'></div>
    </div>

    <div id='codelet_submit' class='form-row justify-content-center'>
        <%= f.submit class: 'btn btn-primary btn-lg'%>
    </div>
<% end %>