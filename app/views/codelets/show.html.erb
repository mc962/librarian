<% content_for :main_head_assets do %>
    <%= stylesheet_pack_tag 'show_codelet', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'show_codelet', 'data-turbolinks-track': 'reload' %>
<% end %>

<main class='codelet-content row' role='main'>
    <div class='col'></div>
    <article class='codelet-page-card card col-8 m-5 p-5'>
        <h1 class='card-title'><%= @codelet.name %></h1>

        <section class='card-body'>
            <section>
                <p class='card-text pt-2 pb-4'>
                    <%= @codelet.description %>
                </p>
            </section>
            <ul id='examples_list'>
                <% @codelet.examples.each do |example| %>
                <li class='bg-light p-4 my-2'>
                    <label for='codelet_examples' class='card-subtitle text-muted'>Examples</label>
                    <p id='codelet_examples' class='card-text'>
                    </p>
                        <%= sanitize(example.markdown_command_html).html_safe %>
                        <%= sanitize(example.markdown_output_html).html_safe %>
                        <%= example.comment %>                        
                </li>
                <% end %>
            </ul>
        </section>
    </article>
    <div class='col'></div>
</main>